<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
         bootstrap="test/bootstrap.php">
    <php>
        <ini name="memory_limit" value="-1"/>
        <ini name="display_errors" value="1"/>
        <ini name="error_reporting" value="-1"/>
        <ini name="date.timezone" value="Europe/Moscow"/>
    </php>

    <testsuites>
        <testsuite name="Orm/QueryBuilder">
            <directory>test/QueryBuilder/</directory>
        </testsuite>
        <!--<testsuite name="Orm/Sqlite">-->
            <!--<directory>test/Sqlite/</directory>-->
        <!--</testsuite>-->
        <testsuite name="Orm/Mysql">
            <directory>test/Mysql/</directory>
        </testsuite>
        <!--<testsuite name="Orm/Pgsql">-->
            <!--<directory>test/Pgsql/</directory>-->
        <!--</testsuite>-->
        <!--<testsuite name="Orm/Fields">-->
            <!--<directory>test/Fields/</directory>-->
        <!--</testsuite>-->
        <!--<testsuite name="Orm/Validation">-->
            <!--<directory>test/Validation/</directory>-->
        <!--</testsuite>-->
        <!--<testsuite name="Orm/Basic">-->
            <!--<directory>test/Basic/</directory>-->
        <!--</testsuite>-->
        <!--<testsuite name="Orm/Issues">-->
            <!--<directory>test/Issues/</directory>-->
        <!--</testsuite>-->
    </testsuites>

    <groups>
        <exclude>
            <group>benchmark</group>
        </exclude>
    </groups>

